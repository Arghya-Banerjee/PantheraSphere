<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PantheraSphere</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Generaluser.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="dashboard-layout">
            <aside class="menu">
                <!-- Logo and Site Name at the top, attached to the first menu set -->
                <div class="menu-header">
                    <img src="/logo.png" alt="Logo" class="logo">
                    <h1 class="site-title">PantheraSphere</h1>
                </div>

                <ul class="menu-items">
                    <li><a href="/Dashboard">Dashboard</a></li>
                    <li><a href="/TigerLogs">Tiger Logs</a></li>
                    <li><a href="/ConservationReports">Reports</a></li>
                    <li><a href="/SubmitSightings">Submit Checklist</a></li>
                    <li><a href="/Profile">Profile</a></li>
                    <li><a href="/Report">Report</a></li>
                </ul>

                <!-- Bottom Links -->
                <ul class="menu-bottom">
                    <li><a href="/Settings">Settings</a></li>
                    <li><a href="/Account/Logout">Logout</a></li>
                </ul>
            </aside>

            <main class="main-content">
                @RenderBody()
            </main>
        </div>

        <footer class="footer">
            <p>&copy; 2025 PantheraSphere. All rights reserved.</p>
        </footer>
    </div>
</body>
</html>
